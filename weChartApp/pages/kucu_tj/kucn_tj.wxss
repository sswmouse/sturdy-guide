/* pages/kucu_tj/kucn_tj.wxss */
/* 库存总量 */
.kucun_tj {
  width: 100vw;
  height: 100vh;
  /* margin: 0% auto; */
  /* box-sizing: border-box; */
  background-color: rgba(0, 0, 0, 0.05);
  /* border: 1px solid red; */
  overflow: hidden;
}

/* 顶部 */
.top {
  width: 100%;
  margin: auto;
  margin-top: 3%;
  margin-bottom: 3%;
  box-sizing: border-box;
  /* border: 1px solid blue; */
}
.top_three{
  width: 100%;
  text-align: center;
  background-color: white;
  margin: 2% 0%;
  padding: 2% 0;
}

.top_three_num{
  color: red;
  font-size: 18px;
}
.top_three_text{
  font-weight: bold;
}

.xuanxiang {
  display: flex;
  width: 90%;
  margin: 3% auto;
}

.xuan1 {
  flex: 1;
  font-size: 18px;
  font-weight: lighter;
  text-align: center;
  background-color: white;
  padding: 2%;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.xuan2 {
  flex: 1;
  font-size: 18px;
  font-weight: lighter;
  text-align: center;
  background-color: white;
  padding: 2%;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}
.xuanxiang .xuanzhong{
  background-color:#fccd05;
}


/* 底部内容 */
.bottom {
  width: 94%;
  margin: 0% auto;
  overflow: scroll;
  /* border: 1px solid cyan; */
}

.bottom::-webkit-scrollbar {
  display: none;
}

.card {
  background-color: white;
  padding: 3% 3%;
  margin-bottom: 2%;
  border-radius: 5px;
}

.card_top {
  display: flex;
  align-items: center;
}

.card_top_left {
  flex: 1;
  margin-right: 2%;
  /* border: 1px solid red; */
}

.card_top_right {
  flex: 4;
  font-size: 13px;
  /* border: 1px solid blue; */
}

.img {
  width: 80px;
  height: 80px;
  /* border: 1px solid red; */
}

.card_bottom {
  /* border: 1px solid green; */
  border-top: 1px solid rgb(228, 228, 228);
  margin-top: 1%;
  padding: 1% 0%;
  display: flex;
}

.card_bottom_left {
  flex: 1;
  font-size: 13px;
}

.card_bottom_right {
  flex: 1;
  font-size: 13px;
  color: darkgray;
  text-align: right;
}