/* pages/kucu_tj/kucn_tj.wxss */
/* 入库数量 */
.ruku_tj{
  width: 100vw;
  height: 100vh;
  margin: 0% auto;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.05);
  /* border: 1px solid red; */
}
/* 顶部 */
.top{
  width: 100%;
  margin: 0% auto;
  box-sizing: border-box;
  /* border: 1px solid blue; */
}
/* 顶部的选择日期 */
.top_one{
  width: 100%;
  background-color: #fcd005;
  text-align: right;
}
.chose_icon{
  width: 12px;
  height: 12px;
  margin: 0% 3% 0% 0%;
}
/* 顶部的选择时间段 */
.top_two{
  width: 94%;
  margin: 1% auto;
  background-color: white;
  /* border: 1px solid green; */
  display: flex;
}
.top_two_row{
  flex: 1;
  text-align: center;
  /* border: 1px solid red; */
}
.chose{
  flex: 1;
  text-align: center;
  background-color: #FCCD05;
}
/* 顶部总数统计 */
.top_three{
  width: 100%;
  text-align: center;
  background-color: white;
  margin: 2% 0%;
  display: flex;
}
.top_three_row{
  flex: 1;
}
.top_three_num{
  color: red;
  font-size: 18px;
  /* font-weight: bold; */
}
.top_three_text{
  font-weight: bold;
}

/* 底部内容 */
.bottom{
  width: 94%;
  margin: 0% auto;
  overflow: scroll;
  /* border: 1px solid cyan; */
}
.card{
  background-color: white;
  padding: 3% 3%;
  margin-bottom: 2%;
}
.card_top{
  display: flex;
  align-items: center;
}
.card_top_left{
  flex: 1;
  margin-right: 2%;
  /* border: 1px solid red; */
}
.card_top_right{
  flex: 4;
  font-size: 13px;
  /* border: 1px solid blue; */
}
.img{
  width: 80px;
  height: 80px;
  /* border: 1px solid red; */
}
.card_bottom{
  /* border: 1px solid green; */
  border-top: 1px solid rgb(228, 228, 228);
  margin-top: 1%;
  padding: 1% 0%;
  display: flex;
}
.card_bottom_left{
  flex: 1;
  font-size: 13px;
}
.card_bottom_right{
  flex: 1;
  font-size: 13px;
  color: darkgray;
  text-align: right;
}

/* 选择查询日期弹框的 */
.time{
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.25);
  /* border: 1px solid red; */
}
.time_box{
  width: 94%;
  margin: 3% auto;
  background-color: white;
  /* border: 1px solid red; */
  position: relative;
}
.time_aroow{
  position: absolute;
  right: 5%;
  top: -18%;
  width: 0%;
  height: 0%;
  border-bottom: 10px solid white;
  border-left: 10px solid rgba(0, 0, 0, 0);
  border-right: 10px solid rgba(0, 0, 0, 0);
  border-top: 10px solid rgba(0, 0, 0, 0);
}

.time_box_one{
  text-align: center;
  padding: 3% 0%;
  border-bottom: 1px solid lightgray;
  display: flex;
  align-items: center;
}
.time_s_e_c{
  flex: 4;
  font-size: 13px;
}
.time_s_e{
  flex: 6;
  display: inline-block;
  font-size: 13px;
  border: 1px solid darkgray;
  padding: 1% 3%;
  margin: 0 1%;
}

.rili_icon_css{
  width: 10px;
  height: 10px;
}
.time_box_two{
  text-align: right;
}
.confirm_css{
  background-color: #FCEC03;
  margin: 2% 3% 1% 0%;
}
.reset_css{
  background-color: #A4A4A4;
  color:white;
  margin-top: 1%;
  margin-right: 5%;
  margin: 2% 8% 1% 0%;
}
